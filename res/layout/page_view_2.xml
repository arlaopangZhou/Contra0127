<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:scrollbars="none" >

    <FrameLayout
        android:gravity="center" 
    	android:layout_gravity="center"
    	android:layout_marginLeft="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-50dip"
            android:layout_marginTop="430dp" >

            <ImageView
                android:id="@id/hot_reflected_img_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@id/hot_reflected_img_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="405dip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@id/latest_layout"
            android:layout_marginLeft="-50dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:id="@id/latest_recommend_fl_0"
                android:layout_width="564dp"
                android:layout_height="497dp" >

                <ImageView
                    android:id="@id/latest_recommend_bg_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-45dp"
                    android:layout_marginLeft="71dp"
                    android:src="@drawable/big_square" />

                <ImageView
                    android:id="@id/latest_recommend_poster_0"
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:layout_marginLeft="115dp"
                    android:layout_marginTop="25dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:nextFocusDown="@id/main_search"
                    android:nextFocusRight="@id/latest_recommend_poster_1"
                    android:nextFocusUp="@id/latest_recommend"
                    android:scaleType="fitXY"
                    android:src="@drawable/movie" />

                <TextView
                    android:id="@id/latest_recommend_text_0"
                    style="@style/TextOnMainLayout_new"
                    android:layout_width="440dip"
                    android:layout_height="50dip"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="395dp" />
            </FrameLayout>

            <FrameLayout
                android:id="@id/latest_recommend_fl_1"
                android:layout_width="564dp"
                android:layout_height="544dp"
				android:layout_marginLeft="405dp">

                <ImageView
                    android:id="@id/latest_recommend_bg_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-27dp"
                    android:layout_marginLeft="70dp"
                    android:src="@drawable/shadow_vertical" />

                <ImageView
                    android:id="@id/latest_recommend_poster_1"
                    android:layout_width="264dp"
                    android:layout_height="400dp"
                    android:layout_marginLeft="115dp"
                    android:layout_marginTop="25dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:nextFocusDown="@id/main_search"
                    android:nextFocusLeft="@id/latest_recommend_poster_0"
                    android:nextFocusUp="@id/latest_recommend"
                    android:scaleType="fitXY"
                    android:src="@drawable/doucumentary" />

                <TextView
                    android:id="@id/latest_recommend_text_1"
                    style="@style/TextOnMainLayout_new"
                    android:layout_width="290dip"
                    android:layout_height="50dip"
                    android:layout_marginLeft="102dp"
                    android:layout_marginTop="395dp" />
            </FrameLayout>

        </RelativeLayout>
        <ImageView
            android:id="@id/white_boder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_border"
            android:visibility="invisible" />
    </FrameLayout>

</HorizontalScrollView>